-----------------------------------------------------------------------------*/
void draw_heuristic()
{
  int nodes_num = layer_2_nodes;
  int i=0,h_count=0,max=-2000;

  while(nodes_num != -1)
  {
                  max=-2000;

                  for(i=0;i<=layer_2_nodes;i++)
                  {
                                               if(nodes[layer_2[i]].value > max)
                                               {
                                               max = nodes[layer_2[i]].value;
                                               id = i;
                                               }
                  }
  nodes[layer_2[id]].value = -2000;
  h_count++;

  if(trick == 0)
  draw_number(id,h_count);

  nodes_num--;
  }
}


