 else
 {
     y=1;

     if(cell == 4)
     x=0;
     else if(cell == 5)
     x=1;
     else if(cell == 6)
     x=2;
     else if(cell == 7)
     x=3;
     else if(cell == 8)
     x=4;

     LineOut(18+x*20, 64-y*32, 18+x*20, 40-y*32);
     LineOut(-2+x*20, 40-y*32, 18+x*20, 40-y*32);
     LineOut(-2+x*20, 64-y*32, -2+x*20, 40-y*32);
     LineOut(-1+x*20, 64-y*32, 18+x*20, 64-y*32);
 }

}

